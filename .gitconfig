[user]
	name = Daniel Kolman
	email = daniel@kolman.cz
[core]
	excludesfile = ~/.gitignore
	editor = vim
[branch]
	autosetuprebase = always
[push]
	default = tracking
[merge]
	keepBackup = false;
	tool = fugitive
[mergetool "fugitive"]
	cmd = mvim -f -c \"Gdiff\" \"$MERGED\"
[mergetool]
	prompt = false
[diff]
	tool = mvimdiff
[difftool]
	prompt = false
[difftool "mvimdiff"]
	cmd = mvim -f -d \"$LOCAL\" \"$REMOTE\"
	path =

[credential]
	helper = osxkeychain
